@model CarRentalSystem.Models.Booking

@{
    ViewData["Title"] = "Dodaj rezerwację";
    string minDate = DateTime.Today.ToString("yyyy-MM-dd");
}

<h1>Dodaj rezerwację</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" type="date" min="@minDate" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" type="date" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Wybierz oddział</label>
                <select id="officeSelect" name="OfficeId" class="form-control" asp-items="ViewBag.OfficeId">
                    <option value="">-- Wybierz lokalizację --</option>
                </select>
            </div>

            <div class="form-group mb-3">
                <label asp-for="CarId" class="control-label"></label>
                <select id="carSelect" asp-for="CarId" class="form-control" disabled>
                    <option value="">-- Najpierw wybierz oddział --</option>
                </select>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label class="control-label">Przewidywany koszt całkowity:</label>
                <div id="totalPriceDisplay" class="form-control" style="background-color: #f8f9fa; font-weight: bold; color: #28a745;">
                    0 zł
                </div>
            </div>

            <div class="form-group mt-4">
                <input type="submit" value="Zarezerwuj" class="btn btn-success w-100" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <script>
        var allCars = @Html.Raw(ViewBag.CarsJson);

        function calculateTotalPrice() {
            var startDate = new Date(document.querySelector('input[name="StartDate"]').value);
            var endDate = new Date(document.querySelector('input[name="EndDate"]').value);
            var carSelect = document.getElementById('carSelect');
            var selectedCarId = carSelect.value;
            var display = document.getElementById('totalPriceDisplay');

            if (startDate && endDate && selectedCarId && endDate >= startDate) {
                // Obliczanie różnicy dni (minimum 1 dzień)
                var diffTime = Math.abs(endDate - startDate);
                var diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24)) + 1;

                // Znajdź cenę wybranego auta w danych JSON
                var car = allCars.find(c => c.id == selectedCarId);
                if (car) {
                    var total = diffDays * car.price;
                    display.innerText = total + " zł (za " + diffDays + " dni)";
                }
            } else {
                display.innerText = "0 zł";
            }
        }

        function refreshCarList() {
            var officeSelect = document.getElementById('officeSelect');
            var carSelect = document.getElementById('carSelect');
            var selectedOfficeId = officeSelect.value;
            var currentCarId = "@(Model?.CarId ?? 0)";

            carSelect.innerHTML = '<option value="">-- Wybierz auto --</option>';

            if (selectedOfficeId) {
                var filtered = allCars.filter(c => c.officeId == selectedOfficeId);
                if (filtered.length > 0) {
                    filtered.forEach(function (car) {
                        var option = document.createElement('option');
                        option.value = car.id;
                        option.text = car.text + " (" + car.price + " zł/doba)";
                        if (car.id == currentCarId) option.selected = true;
                        carSelect.appendChild(option);
                    });
                    carSelect.disabled = false;
                } else {
                    carSelect.innerHTML = '<option value="">Brak aut w tym oddziale</option>';
                    carSelect.disabled = true;
                }
            } else {
                carSelect.disabled = true;
            }
            calculateTotalPrice();
        }

        document.getElementById('officeSelect').addEventListener('change', refreshCarList);
        document.getElementById('carSelect').addEventListener('change', calculateTotalPrice);
        document.querySelector('input[name="StartDate"]').addEventListener('change', calculateTotalPrice);
        document.querySelector('input[name="EndDate"]').addEventListener('change', calculateTotalPrice);

        window.onload = refreshCarList;
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}