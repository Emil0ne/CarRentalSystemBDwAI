@model CarRentalSystem.Models.Booking

@{
    ViewData["Title"] = "Dodaj rezerwację";
    string minDate = DateTime.Today.ToString("yyyy-MM-dd");
}

<h1>Dodaj rezerwację</h1>

<h4>Rezerwacja luksusowego pojazdu</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="StartDate" class="control-label"></label>
                <input asp-for="StartDate" class="form-control" type="date" min="@minDate" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EndDate" class="control-label"></label>
                <input asp-for="EndDate" class="form-control" type="date" min="@minDate" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Wybierz oddział</label>
                <select id="officeSelect" name="OfficeId" class="form-control" asp-items="ViewBag.OfficeId">
                    <option value="">-- Wybierz lokalizację --</option>
                </select>
            </div>

            <div class="form-group">
                <label asp-for="CarId" class="control-label"></label>
                <select id="carSelect" asp-for="CarId" class="form-control" disabled>
                    <option value="">-- Najpierw wybierz oddział --</option>
                </select>
                <span asp-validation-for="CarId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Przewidywany koszt całkowity:</label>
                <div id="totalPriceDisplay" class="form-control" style="background-color: #f8f9fa; font-weight: bold;">
                    0 zł
                </div>
            </div>

            <div class="form-group">
                <input type="submit" value="Zarezerwuj" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        var allCars = @Html.Raw(ViewBag.CarsJson);

                function calculateTotalPrice() {
            var startDateVal = document.querySelector('input[name="StartDate"]').value;
            var endDateVal = document.querySelector('input[name="EndDate"]').value;
            var carSelect = document.getElementById('carSelect');
            var selectedCarId = carSelect.value;
            var display = document.getElementById('totalPriceDisplay');

            if (startDateVal && endDateVal && selectedCarId) {
                var startDate = new Date(startDateVal);
                var endDate = new Date(endDateVal);

                if (endDate >= startDate) {
                    var diffTime = Math.abs(endDate - startDate);
                    var diffDays = Math.ceil(diffTime / (1000 * 60 * 60 * 24)) + 1;

                    var car = allCars.find(c => (c.id || c.Id) == selectedCarId);

                    if (car) {
                        var pricePerDay = car.price || car.Price || 0;
                        var total = diffDays * pricePerDay;
                        display.innerText = total + " zł (za " + diffDays + " dni)";
                    }
                } else {
                    display.innerText = "Data końcowa nie może być przed początkową";
                }
            } else {
                display.innerText = "0 zł";
            }
        }

                function refreshCarList() {
            var officeSelect = document.getElementById('officeSelect');
            var carSelect = document.getElementById('carSelect');
            var selectedOfficeId = officeSelect.value;

            var currentCarId = carSelect.getAttribute('value') || carSelect.value;

            carSelect.innerHTML = '<option value="">-- Wybierz auto --</option>';

            if (selectedOfficeId) {
                var filtered = allCars.filter(c => (c.officeId || c.OfficeId) == selectedOfficeId);
                if (filtered.length > 0) {
                    filtered.forEach(function (car) {
                        var option = document.createElement('option');
                        var id = car.id || car.Id;
                        var price = car.price || car.Price || 0;

                        option.value = id;
                        option.text = (car.text || car.Text) + " (" + price + " zł/doba)";

                        if (id == currentCarId) {
                            option.selected = true;
                        }
                        carSelect.appendChild(option);
                    });
                    carSelect.disabled = false;
                } else {
                    carSelect.innerHTML = '<option value="">Brak aut w tym oddziale</option>';
                    carSelect.disabled = true;
                }
            } else {
                carSelect.disabled = true;
            }

            setTimeout(calculateTotalPrice, 100);
        }

        document.getElementById('officeSelect').addEventListener('change', refreshCarList);
        document.getElementById('carSelect').addEventListener('change', calculateTotalPrice);
        document.querySelector('input[name="StartDate"]').addEventListener('change', calculateTotalPrice);
        document.querySelector('input[name="EndDate"]').addEventListener('change', calculateTotalPrice);

        window.onload = refreshCarList;
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}